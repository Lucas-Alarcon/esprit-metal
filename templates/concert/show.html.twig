{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block main %}
<div class="container">
    <h1>Concert</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ concert.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ concert.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ concert.date ? concert.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ concert.description }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ concert.img }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('concert_index') }}">back to list</a>

    <a href="{{ path('concert_edit', {'id': concert.id}) }}">edit</a>

    <a href="{{ path('concert_add', {'id': concert.id}) }}">add</a>

    {{ include('concert/_delete_form.html.twig') }}
</div>
{% endblock %}
