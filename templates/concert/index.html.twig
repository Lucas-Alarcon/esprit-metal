{% extends 'base.html.twig' %}

{% block title %}Concert index{% endblock %}

{% block main %}
<div class="main">
    <div class="container">
        <div class="row">
            {% for concert in concerts %}
            <div class="col-lg-3 col-md-6 mb-4">
                <a href="{{ path('concert_show', {'id': concert.id}) }}">
                <div class="card h-100">
                    <img class="card-img-top" src={{ asset('images/concerts/'~concert.image) }} alt="">
                    <div class="card-body">
                        <h4 class="card-title">
                        {{ concert.name }}
                        </h4>
                    </div>
                </div>
                </a>
            </div>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
        </div>
        <a class ="text-white" href="{{ path('concert_new') }}">Create new</a>
    </div>
</div>
{% endblock %}
